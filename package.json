{
  "name": "snipd",
  "scripts": {
    "build_notes": "npx vite build ./notes_page --outDir=../extension/notes_page",
    "build_popup": "npx vite build ./popup --outDir=../extension/popup",
    "buildall": "npm run build_notes && npm run build_popup"
  },
  "workspaces": [
    "popup",
    "notes_page",
    "extension"
  ],
  "dependencies": {
    "@mantine/ds": "^6.0.0",
    "jspdf": "^2.5.1",
    "postcss-preset-mantine": "^1.13.0",
    "react-text-truncate": "^0.19.0",
    "uuid": "^9.0.1",
    "uuidv4": "^6.2.13"
  },
  "devDependencies": {
    "prettier": "^2.8.4"
  },
  "prettier": {
    "printWidth": 100,
    "bracketSameLine": true
  }
}
