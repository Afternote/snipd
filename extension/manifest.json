{
  "description": "WIP",
  "manifest_version": 3,
  "name": "snipd",
  "version": "1.0",
  "homepage_url": "https://github.com/PDFilez/snipd",
  "icons": {
    "48": "images/snipdLogo.png"
  },
  "permissions": ["tabs", "activeTab", "contextMenus", "scripting", "storage", "action", "notifications", "sidePanel"],
  "host_permissions": ["file:///*"],
  "action": {
    "default_title": "snipd",
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "index.js"
  },
  "options_ui": {
    "page": "notes_page/index.html",
    "open_in_tab": true
  },
  "side_panel": {
    "default_path": "popup/index.html"
  }
}
