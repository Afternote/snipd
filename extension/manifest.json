{
  "description": "WIP",
  "manifest_version": 3,
  "name": "snipd",
  "version": "1.0",
  "homepage_url": "https://github.com/PDFilez/snipd",
  "icons": {},
  "permissions": ["tabs", "activeTab", "contextMenus", "scripting", "storage"],

  "action": {
    "default_title": "snipd",
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "index.js"
  },
  "options_ui": {
    "page": "notes_page/index.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["file:///*"],
      "js": ["pdf_inject.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["query_pdf.js"],
      "matches": ["file:///*"],
      "use_dynamic_url": true
    }
  ]
}
